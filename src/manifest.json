{
    "manifest_version": 3,
    "name": "__MSG_name__",
    "version": "1.0",

    "default_locale": "en",
    "description": "__MSG_description__",
    "icons": {
      "16": "16.png",
      "24": "24.png",
      "32": "32.png",
      "48": "48.png",
      "128": "128.png"
    },
    "author": "LÃ©on McGregor",
    "homepage_url": "https://github.com/LonMcGregor/",


    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],

    "content_security_policy": {
      "extension_pages": "default-src 'self'; img-src *; media-src *; font-src *;"
    },
    "permissions": [
      "webRequest",
      "downloads"
    ],
    "host_permissions": ["<all_urls>"],

    "options_ui": {
      "page": "options.html",
      "open_in_tab": false
    },

    "incognito": "split"
}
